<!DOCTYPE html>
<html>
<head>
  <title>Trellino</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar " role="navigation">
    <div class="container-fluid">
      <div class="collapse navbar-collapse">
        <a class="navbar-brand navbar-btn" href="/home">Trellino</a>
        <ul class="nav navbar-nav navbar-left">
          <li>
            <a class="navbar-btn" href="#"><span class="glyphicon glyphicon-th-large"></span> My Boards</a>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
            <li class="dropdown">
              <a href="#" 
                 class="navbar-btn dropdown-toggle" 
                 data-toggle="dropdown">
                 <span class="glyphicon glyphicon-user"></span> 
                 <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li class="divider"></li>
                <li><%=link_to "Sign Out", session_url, :method => :delete %></li>
              </ul>
            </li>
            <% else %>
              <li>
                <button class="btn navbar-btn"
                        id="sign-in-button"
                        data-toggle="modal"
                        data-target=".bs-example-modal-sm">
                        Sign In
                </button>
              </li>

              <div class="modal fade bs-example-modal-sm"
                  tabindex="-1"
                  role="dialog"
                  aria-labelledby="mySmallModalLabel"
                  aria-hidden="true">
              <div class="modal-dialog modal-sm">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;
                    </button>
                    <h4 class="modal-title" id="myModalLabel">Sign In</h4>
                  </div>
                  <div class="modal-body">
                    <%= render "sessions/form", :user => @user %>
                     </div>
                   </div>
                </div>
              </div>

              <li>
                <%= button_to "Sign Up", new_user_url, 
                    :method => :get, 
                    :class => "btn navbar-btn", 
                    :id => "sign-up-button"%>
              </li>
            <% end %>
           </ul>
         </div><!-- /.navbar-collapse -->
       </div><!-- /.container-fluid -->
     </nav>
  <%= yield %>

</body>
</html>
